{
   "name": "vsc-organize-imports",
   "displayName": "vsc-organize-imports",
   "description": "Organize imports in ts/js files. (Keep line structure (single-line/multi-line) and keeps comments)",
   "publisher": "alfnielsen",
   "icon": "vsc-base-icon.png",
   "repository": {
      "type": "git",
      "url": "https://github.com/alfnielsen/vsc-base"
   },
   "homepage": "https://github.com/alfnielsen/vsc-base",
   "version": "0.0.2",
   "engines": {
      "vscode": "^1.32.0"
   },
   "categories": [
      "Other"
   ],
   "activationEvents": [
      "onLanguage:typescript",
      "onLanguage:typescriptreact",
      "onLanguage:javascript",
      "onLanguage:javascriptreact"
   ],
   "main": "./out/extension.js",
   "contributes": {
      "commands": [
         {
            "command": "extension.vscOrganizeImports",
            "title": "vsc Organize Imports"
         }
      ],
      "keybindings": [
         {
            "command": "extension.vscOrganizeImports",
            "key": "ctrl+alt+o",
            "when": "editorTextFocus"
         }
      ],
      "configuration": {
         "type": "object",
         "title": "vsc Organize Imports",
         "properties": {
            "vscOrganizeImports.formatOnSave": {
               "title": "Format on save",
               "type": "boolean",
               "default": "true",
               "description": "Run vsc-organize-imports on save"
            },
            "vscOrganizeImports.spaceBetweenImportGroups": {
               "title": "Space between import groups",
               "type": "boolean",
               "default": "false",
               "description": "Add empty line between import groups: global, local/absolute and relative paths."
            },
            "vscOrganizeImports.orderSpecifiers": {
               "title": "Sort named imports",
               "type": "boolean",
               "default": "false",
               "description": "Sort each imports named specifiers. ex: import { a, b, c }"
            },
            "vscOrganizeImports.orderSpecifiersAsSingleLine": {
               "title": "Make import as single lines",
               "type": "boolean",
               "default": "false",
               "description": "This is only applied if 'Sort named imports' is true. If this is false the output will be multi-line."
            }
         }
      }
   },
   "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "postinstall": "node ./node_modules/vscode/bin/install",
      "test": "npm run compile && node ./node_modules/vscode/bin/test"
   },
   "devDependencies": {
      "tslint": "^5.12.1",
      "typescript": "^3.3.1",
      "vscode": "^1.1.33"
   },
   "dependencies": {
      "vsc-base": "^0.8.11"
   }
}
